#!/usr/bin/env autorake

#
#  mkrf_conf  --  configure Step
#

require "rbconfig"

incdir_ruby RbConfig::CONFIG[ "topdir"]

very_old =                     RUBY_VERSION <= "1.8.6"
feature_array_index_with_block very_old
feature_kernel_tap             very_old
feature_array_select_bang      RUBY_VERSION < "1.9.2"
feature_string_ord             RUBY_VERSION < "1.9"

have_header "ruby.h"
have_header "st.h"
have_header "rubyio.h"
have_header "re.h"

