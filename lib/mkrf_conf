#!/usr/bin/env autorake

#
#  mkrf_conf  --  configure Step
#

extending_ruby

if RUBY_VERSION < "1.9.2" then
  enable_array_select_bang
  if RUBY_VERSION < "1.9" then
    enable_string_ord
    if RUBY_VERSION < "1.8.7" then
      enable_array_index_with_block
      enable_kernel_tap
      enable_string_start_with
    end
    enable_thread_exclusive
    have_header "rubysig.h"
  end
end

have_header "ruby.h"
if RUBY_VERSION < "1.9" then
  have_header "st.h"
  have_header "rubyio.h"
  have_header "re.h"
else
  have_header "ruby/st.h"
  have_header "ruby/io.h"
  have_header "ruby/re.h"
end

# vim:set ft=ruby :
